{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "1.0",
    "description": "__MSG_extensionDescription__",
    "author": "Rafa≈Ç Kukawski",
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "default_locale": "en",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "page_action": {
        "browser_style": true,
        "default_icon": "icon.svg",
        "default_title": "__MSG_extensionName__",
        "default_popup": "popup.html",
        "show_matches": [
            "<all_urls>"
        ]
    },
    "options_ui": {
        "page": "settings.html",
        "browser_style": true
    },
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    }
}